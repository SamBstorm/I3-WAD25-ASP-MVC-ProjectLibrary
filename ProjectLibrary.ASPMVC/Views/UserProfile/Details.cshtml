@model ProjectLibrary.ASPMVC.Models.UserProfile.DetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DetailsViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearsOld)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearsOld) ans.
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegisterDaysCounter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegisterDaysCounter)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Biography)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Biography)
        </dd>
        <a asp-action="SetFavoriteBook" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-primary">Modifier livre favoris</a>
        @if(Model.FavoriteBookId is not null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FavoriteBookTitle)
            </dt>
            <dd class="col-sm-10">
                <a asp-action="Details" asp-controller="Book" asp-route-id="@Model.FavoriteBookId">@Model.FavoriteBookTitle</a>
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReadingSkill)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.ReadingSkill is null)
            {
                <span>Non renseigné</span>
            }
            else if(Model.ReadingSkill > 5)
            {
                <span>&gt;5 livre(s) / mois</span>
            }
            else
            {
                <span>@Model.ReadingSkill livre(s) / mois</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NewsLetterSubscribed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NewsLetterSubscribed)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = ViewContext.RouteData.Values["id"] }) |
    <a asp-action="Index">Back to List</a>
</div>
